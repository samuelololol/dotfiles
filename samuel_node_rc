echo "Loading nodejs/nvm environment...."
# nvm on linux
export NVM_DIR="$HOME/.nvm"
node_source_file=$(brew --prefix nvm)/nvm.sh
#echo $node_source_file
[ -s "$node_source_file" ] && . "$node_source_file"  # This loads nvm


